<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/name_zh_cn"
        layout="@layout/layout_input_field_horizontal" />

    <include
        android:id="@+id/name_en_us"
        layout="@layout/layout_input_field_horizontal" />

    <include
        android:id="@+id/type"
        layout="@layout/layout_select_field_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/power"
            layout="@layout/layout_input_field_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/duration"
            layout="@layout/layout_input_field_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/ct"
            layout="@layout/layout_input_field_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/skill_bar"
            layout="@layout/layout_input_field_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <include
        android:id="@+id/damage_scalar"
        layout="@layout/layout_input_field_horizontal" />

    <include
        android:id="@+id/heal_scalar"
        layout="@layout/layout_input_field_horizontal" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/confirm" />
</LinearLayout>